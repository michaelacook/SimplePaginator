{% if paginated %}
<nav class="mt-5">
    <ul class="pagination pagination-sm">
    {% if page > 1 %}
    <li class="page-item"><a class="page-link text-info" href="{{ uri }}?page={{ page - 1}}">Previous</a></li>
    {% else %}
    <li class="page-item disabled"><a class="page-link text-secondary">Previous</a></li>
    {% endif %}

    {% for i in 1..pages %}
    {% if page == loop.index %}
    <li class="page-item active"><a class="page-link" href="{{ uri }}?page={{ loop.index }}">{{ loop.index }}</a></li>
    {% else %}
    <li class="page-item"><a class="page-link text-info" href="{{ uri }}?page={{ loop.index }}">{{ loop.index }}</a></li>
    {% endif %}
    {% endfor %}

    {% if page < pages %}
    <li class="page-item"><a class="page-link text-info" href="{{ uri }}?page={{ page + 1}}">Next</a></li>
    {% else %}
    <li class="page-item disabled"><a class="page-link text-secondary">Next</a></li>
    {% endif %}
    </ul>
</nav>
{% endif %}
